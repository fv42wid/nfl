<div class="col-md-4" data-sticky_column>
  <div class="primary-sidebar">
    <aside class="widget about-me-widget">
      <div class="about-me-img">
        <div class="about-me-content text-center">
          <%= image_tag '/images/me.png', :class => "img-me" %>
          <h3 class="text-uppercase">Rubel Miah</h3>
          <p>Rubel is enthusiastic and passionate WP Theme Cooker. He is Currently working as a Lead WordPress Developer.</p>
        </div>
      </div>
      <div class="social-share">
        <ul class="text-center text-center">
          <li><a class="s-facebook" href=""><i class="fa fa-facebook"></i></a></li>
          <li><a class="s-twitter" href=""><i class="fa fa-twitter"></i></a></li>
          <li><a class="s-google-plus" href=""><i class="fa fa-google-plus"></i></a></li>
          <li><a class="s-linkedin" href=""><i class="fa fa-linkedin"></i></a></li>
          <li><a class="s-instagram" href=""><i class="fa fa-instagram"></i></a></li>
        </ul>
      </div>
    </aside>
    <aside class="widget news-letter">
      <h3 class="widget-title text-uppercase text-center">Subscribe</h3>
      <%= form_for(@subscriber) do |f| %>
        <%= f.email_field :email, placeholder: "Your email address" %>
        <input type="submit" value="Subscribe Now"
               class="text-uppercase text-center btn btn-subscribe">
	<% end %>

    </aside>
    <aside class="widget">
      <h3 class="widget-title text-uppercase text-center">Recent Stories</h3>
      <% @last4_stories.each do |last_story| %>
        <div class="popular-post">
	  <a href="#" class="popular-img">
	    <%= image_tag last_story.image %>
	    <div class="p-overlay"></div>
          </a>
          <div class="p-content">
            <a href="#" class="text-uppercase">
	      <%= last_story.title %>
	    </a>
            <span class="p-date">
	      <%= last_story.created_at.to_formatted_s(:long) %>
	    </span>
          </div>
	</div>
      <% end %>
      
    </aside>
